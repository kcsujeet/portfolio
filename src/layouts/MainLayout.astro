---
import "../styles/global.css";
import { JOB_TITLE } from "@/lib/constants";

const ogTitle = `Sujeet Kc | ${JOB_TITLE} & Problem Solver`;
const ogDescription = `Senior Full-Stack Engineer specializing in React, Ruby on Rails, and Astro. Focused on building high-performance, scalable web applications and solving complex architectural challenges.`;
const logoUrl = "/logo.svg";
const siteUrl = "https://kcsujeet.com.np/";
const ogType = "website";
const ogSiteName = "Sujeet Kc | Portfolio";
const keywords =
  "Sujeet Kc, Senior Full-Stack Engineer, Software Architect, Problem Solver, React Developer, Ruby on Rails Expert, PostgreSQL, Postgres, SQL, Redis, Docker, Astro Framework, TypeScript, Web Performance, Scalable Architecture, Canada Developer, Halifax Software Engineer";

const canonicalURL = new URL(Astro.url.pathname, siteUrl);

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Sujeet Kc",
  url: siteUrl,
  sameAs: [
    "https://github.com/kcsujeet",
    "https://linkedin.com/in/kc-sujeet",
    "https://dev.to/kcsujeet",
  ],
  jobTitle: JOB_TITLE,
  worksFor: {
    "@type": "Organization",
    name: "Event Temple",
  },
  alumniOf: {
    "@type": "CollegeOrUniversity",
    name: "Dalhousie University",
  },
  description: ogDescription,
  image: new URL(logoUrl, siteUrl).href,
  knowsAbout: [
    "Full-Stack Development",
    "React",
    "Ruby on Rails",
    "PostgreSQL",
    "Postgres",
    "SQL",
    "Redis",
    "Docker",
    "Astro",
    "TypeScript",
    "System Architecture",
    "Web Performance",
  ],
};

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "Sujeet Kc Portfolio",
  url: siteUrl,
  description: ogDescription,
  author: "Sujeet Kc",
};
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sujeet Kc</title>
    <meta name="description" content={ogDescription} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Sujeet Kc" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph tags -->
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(logoUrl, siteUrl)} />
    <meta property="og:site_name" content={ogSiteName} />
    <meta property="og:locale" content="en_CA" />

    <!-- Twitter Card tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@kcsujeet" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />
    <meta name="twitter:image" content={new URL(logoUrl, siteUrl)} />

    <link rel="icon" type="image/svg+xml" href={logoUrl} sizes="any" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify([personSchema, websiteSchema])} />
  </head>

  <body class="bg-background text-foreground font-sans selection:bg-primary/30 selection:text-primary-foreground">
    <main class="min-h-screen relative overflow-x-hidden">
      <slot />
    </main>
  </body>
</html>
